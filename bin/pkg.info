#!/bin/bash

if [[ $(uname) == 'Darwin' ]]; then
    brew info "$@"
    if [[ $? == 1 ]]; then
        brew cask info "$@"
    fi
fi

# RedHat/CentOS
if [[ -f /etc/redhat-release ]]; then
    yum info "$@"
fi

# UBUNTU/Debian
if [[ -f /etc/lsb-release ]]; then
    apt-cache show "$@"
fi

uname | grep CYGWIN > /dev/null
if [[ $? == 0 ]]; then
    apt-cyg show "$@"
    # echo '----------------Chocolatey packages----------------'
    # choco info "$@"
fi
