#!/bin/bash
pkg.SETUP

if [[ $(uname) == 'Darwin' ]]; then
    brew search "$@"
    brew cask search "$@"
fi

# RedHat/CentOS/Fedora
if [[ -f /etc/redhat-release ]]; then
    yum --cacheonly search --all "$@"
fi

# UBUNTU/Debian
if [[ -f /etc/lsb-release ]]; then
    apt-cache search "$@" | grep -i "$@"
fi

uname | grep CYGWIN > /dev/null
if [[ $? == 0 ]]; then
    apt-cyg listall "$@"
    echo '----------------Chocolatey packages----------------'
    choco search "$@"
fi
