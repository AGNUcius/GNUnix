#!/bin/bash

# https://sdkdocs.roku.com/display/sdkdoc/External+Control+API

if [[ "$2" == "" ]]; then
    echo "Arg1: IP of roku"
    echo "Arg2: key"
   exit 22
fi

echo $2

if [[ ${#2} == 1 ]]; then
    key="Lit_$(printf '%%%02X' "'$2")"
else
    key="$2"
fi

req=http://$1:8060/keypress/$key
echo $req

curl -d '' $req

