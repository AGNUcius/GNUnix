if [[ "$2" == "" ]]; then
    echo "Arg1: IP of roku"
    echo "Arg2: key"
   exit 22
fi

if [[ ${#2} == 1 ]]; then
    key="Lit_$(printf '%%%02X' "'$2")"
else
