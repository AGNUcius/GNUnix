#!/usr/bin/python
# remix of https://github.com/paulmouzas/roku-remote.git

# enable developer mode on the roku
# HOME HOME HOME  UP UP  RIGHT LEFT  RIGHT LEFT  RIGHT

# sudo easy_install pip
# sudo pip install requests

import requests, curses, socket, sys, subprocess

# https://www.gnu.org/software/guile-ncurses/manual/html_node/Getting-characters-from-the-keyboard.html
# https://sdkdocs.roku.com/display/sdkdoc/External+Control+API
KEY_MAP = {}
KEY_MAP.update({
    #curses.KEY_ENTER: 'SELECT', #Enter
    10:               'SELECT', #Enter
    27:               'BACK',   #Escape
    ord(' '):         'PLAY',   # disallows SPACE during text input
    curses.KEY_F1:    'INFO',
    curses.KEY_HOME:  'HOME',
    curses.KEY_UP:    'UP',
    curses.KEY_DOWN:  'DOWN',
    curses.KEY_LEFT:  'LEFT',
    curses.KEY_RIGHT: 'RIGHT',
    curses.KEY_PPAGE: 'VolumeUp',
    curses.KEY_NPAGE: 'VolumeDown',
    curses.KEY_END:   'VolumeMute',
    #curses.KEY_BACKSPACE: 'BACKSPACE' # doesn't work on macOS terminal
    127:              'BACKSPACE'
})

GROUP = ('239.255.255.250', 1900)
MESSAGE = '''\
M-SEARCH * HTTP/1.1\r\n\
Host: %s:%s\r\n\
Man: "ssdp:discover"\r\n\
ST: roku:ecp\r\n\r\n\
''' % GROUP

def roku_name(ip):
    resp = ''
    try:
    	resp = requests.get('http://' + ip + ':8060/query/device-info', timeout=3)
    except:
        return '[TIMEOUT]'

    xml = resp.text
    # <model-name>Roku 3</model-name>
    # <model-number>4230X</model-number>
    # <is-tv>false</is-tv>
    # <is-stick>false</is-stick>
    # <developer-enabled>false</developer-enabled>
    pos = xml.find('<user-device-name>')
    name = ''
    if pos != -1:
        name = xml[pos + len('<user-device-name>'):].split('<')[0]

    return name

def find_roku():
    print 'Searching ...  (Ctrl-c to Cancel)'
    sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    sock.sendto(MESSAGE, GROUP)
    count = 0
    try:
        while True:
            sock.settimeout(5)
            data = sock.recv(4096)
            if data == '': break
            resp = data.split('\r\n')
            for line in resp[1:]:
                line = line.split()
                if len(line) < 2: continue
                var = line[0][:-1]; val = line[1]
                if var == 'LOCATION':
                    ip = val[len('http://'):]
                    ip = ip.split(':')[0]
                    print ip, ' ', roku_name(ip)
                    count += 1
                    break

    except socket.timeout:
        print "Finished search."

    sock.close()
    return ip, count

def main():
    count = 0
    ip = ''
    if len(sys.argv) < 2:
        ip, count = find_roku()
    else:
        ip = sys.argv[1]; count = 1

    if count < 1:
        print 'Could not find roku.'
        return 0

    if count > 1:
        print 'Select IP from list.'
        return 0

    url = 'http://' + ip + ':8060/'

    try:
        scr = curses.initscr(); curses.noecho(); scr.keypad(1)
        scr.addstr(0, 4, 'Posting to "%s" at %s' % (roku_name(ip), ip))
        scr.addstr(1, 0, 'RET:  Select')
        scr.addstr(2, 0, 'ESC:  Back')
        scr.addstr(3, 0, 'SPC:  Play/Pause')
        scr.addstr(4, 0, 'HOME: Home')
        scr.addstr(5, 0, 'F1 :  Info')
        scr.addstr(6, 0, 'PGUP: Vol Up')
        scr.addstr(7, 0, 'PGDN: Vol Down')
        scr.addstr(8, 0, 'END:  Mute')
        scr.addstr(9, 0, 'C-c:  EXIT')

        while True:
            key = scr.getch()
            cmd = KEY_MAP.get(key, '')
            if cmd == '': cmd = 'Lit_%' + "%x" % key
            requests.post(url + 'keypress/' + cmd)

    except:
        print ''

    curses.endwin()

if __name__ == '__main__':
    main()
