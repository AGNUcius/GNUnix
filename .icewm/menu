# see /usr/share/icewm/preferences and /etc/X11/icewm/menu

prog Internet chromium-browser chromium-browser

separator

menu Programs work.ico {
 menu Accessories accessories.ico {
  prog "File Browser" xfe xfe
  prog "Text Editor" xfw xfw
  prog "Command Prompt" xterm xterm
  prog Calculator calculator.ico xcalc
  prog Magnifier xmag xmag
  prog RDesktop rdesktop rdesktop
  prog NoteMacs emacs emacs --maximized
 }
 menu Art art {
  prog kino kino kino
  prog Blender blender blender
  prog Gimp gimp gimp
  prog Fotoxx fotoxx fotoxx
  prog "Circuit Sim" qucs qucs
 }
 menu Games games {
  prog minetest minetest minetest
 }
}

menu System system {
 prog "Add/Remove Programs" synaptic xterm -e sudo synaptic
separator
 prog "Manage Tasks" htop xterm -maximized -e htop
 prog "Power Settings" powertop xterm -maximized -e sudo powertop
 prog "Mouse Settings" tpconfig xterm -e tpconfig
 prog "Check Battery" yacpi xterm -e yacpi
 prog "Adjust Volume" alsamixer xterm -e alsamixer
# separator
# prog "Make LiveCD" xterm xterm -e 
# separator
 prog Lock xlock xlock
 prog Shutdown shutdown xterm -e sudo shutdown now
 prog Restart restart xterm -e sudo shutdown -r now
 prog Suspend suspend xterm -e sudo pm-supend
separator
 prog RootMacs emacs xterm -e sudo emacs --maximized --eval '(set-background-color "darkgreen")'
 prog "VNC Server" x11vnc xterm -e x11vnc -xkb -forever -usepw -ncache 10
}

# menuprog Gnome folder icewm-menu-gnome1 --list
# menuprog Gnome folder icewm-menu-gnome2 --list
# menuprog KDE folder icewm-menu-gnome --list
