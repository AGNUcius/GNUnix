apt-get install git
cd ~
git clone https://github.com/AGNUcius/GNUnix.git

pkg.up
pkg.add xinit xterm icewm wdm big-cursor xlock #slim lightdm
pkg.add git  
pkg.add htop emacs chromium-browser p7zip-full
echo pkg.add pm-utils
echo pkg.add moc gom dhex

if (laptop)
{
 pkg.add yacpi wicd-curses wireless-regdb crda iw rfkill
 sudo rfkill list all
 sudo pm-powersave
}

sudo add user audio

cat ~/.GNUnix/README.txt
